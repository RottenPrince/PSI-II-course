@model API.Models.QuestionModel

<!DOCTYPE html>
<html>
<head>
    <title>Question Page</title>
    <link rel="stylesheet" href="~/css/Question.Solve.css">
</head>
<body>
    <div id="questionTitle">
        <h1>@Model.Question</h1>
    </div>

  <div id="timer" style="font-size: 18px; margin-top: 20px;">
    <span style="font-weight: bold; color: #333;">Your time:</span>
    <span id="countdown" style="font-size: 24px; color: #e74c3c;">0</span> seconds
</div>


    @if(Model.ImageName != null)
    {
        <div id="questionImage">
            <img src="~/img/@Model.ImageName" alt="Question Image" />
        </div>
    }

    <div id="form">
        <form id="choiceForm">
            @foreach(var (idx, option) in Model.AnswerOptions.WithIndex())
            {
                <label class="option">
                    <input type="radio" name="answer" value="@idx" /> @option
                </label>
                <br />
            }

            <button type="button" id="submitButton">Submit</button>
            <div id="answerMessage"></div>
        </form>
    </div>
    <div>@ViewBag.Title</div>


    <script>
        document.getElementById("submitButton").addEventListener("click", function () {
            var selectedAnswer = document.querySelector("input[name='answer']:checked").getAttribute("value");

            if (selectedAnswer !== null) {
                $.ajax({
                    type: "POST",
                    url: "/api/QuestionAPI/CheckAnswer",
                    data: JSON.stringify({ name: "@ViewData["QuestionName"]", answer: parseInt(selectedAnswer) }),
                    success: function (data) {
                        if(data === true) {
                            document.getElementById("answerMessage").textContent = "You are Right!";
                        } else {
                            document.getElementById("answerMessage").textContent = "WRONG!";
                        }
                        console.log(data);
                    }, // TODO error handling
                    contentType: "application/json",
                    dataType: "json"
                });
            }
        });    </script>
</body>
</html>


<script>
    var countdownTime = 0;
    var countdownInterval;

    function updateTimerDisplay() {
        document.getElementById("countdown").textContent = countdownTime;
    }

    function startTimer() {
        countdownInterval = setInterval(function () {
            countdownTime++; 
            updateTimerDisplay();
        }, 1000); 
    }


    document.getElementById("submitButton").addEventListener("click", function () {
        var selectedAnswer = document.querySelector("input[name='answer']:checked").getAttribute("value");

        if (selectedAnswer !== null) {
       
            clearInterval(countdownInterval);

            updateTimerDisplay();
        }
    });
    window.addEventListener("load", startTimer);
</script>

@model API.Models.Question.CheckboxQuestionModel

<div id="form">
	<form id="choiceForm">
		@foreach(var (idx, option) in Model.AnswerOptions.WithIndex())
		{
			<label class="option">
				<input type="radio" name="answer" value="@idx" /> @option
			</label>
			<br />
		}

		<button type="button" id="submitButton">Submit</button>
		<div id="answerMessage"></div>
	</form>
</div>

<script>
	function getCurrentAnswer() {
		return document.querySelector("input[name='answer']:checked").getAttribute("value");
	}
</script>
